unit Order_class;

interface
 uses Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls,Panel_order;

  type TOrder = Class
  private
    id : integer;

  public
    constructor Create(p_id : integer);
    procedure Edit(P_id: integer);
    destructor Destroy;
    function get_id : integer;

  End;
implementation

function TOrder.get_id;
begin
   get_id  := id;
end;

constructor TOrder.Create(p_id: Integer);
begin
  id := p_id;
end;

procedure TOrder.Edit(P_id: Integer);
begin
  id := p_id;
end;

destructor TOrder.Destroy;
begin

end;


end.

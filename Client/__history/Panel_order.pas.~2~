unit Panel_order;

interface
 uses Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls, order_class;

type TPanel_order = Class(TPanel)
  order : TOrder;
  procedure put_details;
  public
    constructor Create(AOwner: TComponent; P_Order : TOrder); override;
    destructor Destroy; override;
    procedure update;

End;

implementation

procedure TPanel_order.put_details;
begin
    caption := order.get_id;
end;

constructor TPanel_order.Create(AOwner: TComponent; P_Order : TOrder);
begin
  inherited;
  order = P_order;
  // Put here order details
  put_details;
end;

destructor TPanel_order.Destroy;
begin
  inherited;
end;

procedure TPanel_order.update;
begin
   put_details;
end;

end.
